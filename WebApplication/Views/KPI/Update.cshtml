@model KPI
@{
    ViewBag.Title = "Update";
    ViewBag.Names = new SelectList((ViewBag.Names as string).Split(',').Skip(1).OrderBy(s => s.Split(' ').Last())
        .Select(s => new { Value = s.Replace(" ", "").ToLower(), Text = s }), "Value", "Text", Model.Email.Split('@')[0]);
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Model.KP1.MucTieu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        @Html.Partial("Edit", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", new { id = -Model.KP1.id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
